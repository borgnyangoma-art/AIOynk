# AIO Creative Hub - Environment Configuration
# Copy this file to .env and configure the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aio_creative_hub
DB_USER=aio
DB_PASSWORD=aio_password
DB_SSL=false

# Database connection string (alternative to individual settings)
# DATABASE_URL=postgresql://aio:aio_password@localhost:5432/aio_creative_hub

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=aio_redis_password
REDIS_DB=0
REDIS_URL=redis://:aio_redis_password@localhost:6379/0

# Redis session TTL (in seconds)
REDIS_SESSION_TTL=3600

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate RSA keys using:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----

# Token expiration times
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
JWT_ISSUER=aio-creative-hub
JWT_AUDIENCE=aio-users

# =============================================================================
# GOOGLE OAUTH 2.0
# =============================================================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
# Requests per minute
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE STORAGE
# =============================================================================
# Storage provider: local, s3, google_drive
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aio-creative-hub

# Google Drive (if using Google Drive)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# MONITORING & METRICS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# Prometheus (if using)
PROMETHEUS_PORT=9090

# Grafana (if using)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =============================================================================
# SECURITY
# =============================================================================
# Session secret (for express-session)
SESSION_SECRET=your_session_secret_here_change_in_production

# BCrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# Account lockout settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# For sending verification emails, password reset, etc.
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@aio-creative-hub.com
FROM_NAME=AIO Creative Hub

# Alternatively, use SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# =============================================================================
# CDN CONFIGURATION (Optional)
# =============================================================================
# For serving static assets
CDN_PROVIDER=cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_zone_id

# AWS CloudFront
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id

# Vercel
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=your_project_id

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Slack (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Discord (for notifications)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=aio:*

# Enable hot reloading
WATCH_FILES=true

# Test database (for running tests)
TEST_DB_NAME=aio_creative_hub_test
TEST_REDIS_DB=1

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
# PostgreSQL Docker
POSTGRES_IMAGE=postgres:15-alpine
POSTGRES_CONTAINER_NAME=aio-postgres

# Redis Docker
REDIS_IMAGE=redis:7-alpine
REDIS_CONTAINER_NAME=aio-redis

# =============================================================================
# NLP SERVICE
# =============================================================================
NLP_SERVICE_URL=http://localhost:8000
NLP_SERVICE_API_KEY=your_nlp_service_api_key

# =============================================================================
# CREATIVE TOOL SERVICES
# =============================================================================
GRAPHICS_SERVICE_URL=http://localhost:3001
WEB_DESIGNER_SERVICE_URL=http://localhost:3002
IDE_SERVICE_URL=http://localhost:3003
CAD_SERVICE_URL=http://localhost:3004
VIDEO_SERVICE_URL=http://localhost:3005

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set these for production deployment
# FORCE_HTTPS=true
# TRUST_PROXY=true
# COOKIE_SECURE=true
# SESSION_COOKIE_SECURE=true
# CORS_ORIGIN=https://your-domain.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=aio-creative-hub-backups

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file or actual .env to version control
# 2. Use strong, unique passwords and secrets in production
# 3. Rotate secrets regularly
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. For Docker, use docker-compose.env or pass env vars directly
#
# For more information, see:
# - https://12factor.net/config
# - https://docs.docker.com/compose/environment-variables/
